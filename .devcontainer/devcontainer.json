{
    "name": "My Custom Template",
    "build": {
      "dockerfile": "Dockerfile" // Remove this line if not using a Dockerfile
    },
    "customizations": {
        "vscode": {
        "settings": {
            "java.jdt.ls.java.home": "/usr/local/openjdk-21",
            "editor.formatOnSave": true,
            "editor.tabSize": 4
        },
        "extensions": [
            "redhat.java",  // Java language support
            "vscjava.vscode-java-pack"  // Java Extension Pack
        ]
        }
    },
    "postCreateCommand": [
        "javac -version && java -version", // Command to run after creating the container
        "curl -fsSL https://deb.nodesource.com/setup_18.x | bash -", // Setup Node.js repository
        "apt-get install -y nodejs", // Install Node.js (npm is included)
        "npm install -g npm@latest", // Update npm to the latest version
        "npm install -g npx" // Install npx globally
    ],
    //"forwardPorts": [8080], // Ports to forward
    "remoteUser": "vscode"
}
  